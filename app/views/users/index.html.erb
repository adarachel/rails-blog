<div class="main-container">
  <div class="sign-main">
    <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "devise-button" %>
    <% unless user_signed_in? %>
      <button class="devise-button">
        <%= link_to "Log in", new_user_session_path, class: "link-login" %>
      </button>
    <% end %>
  </div>
  <% @users.each do |user| %>
    <div class="users-wrapper">
      <div class="img-cont">
        <% if user.photo.present? %>
          <%= image_tag user.photo, :size => "70x85", alt: "user photo" %>
        <% else %>
          <%= image_tag "https://images.unsplash.com/photo-1587402092301-725e37c70fd8?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8YmVhdXRpZnVsJTIwZG9nfGVufDB8fDB8fA%3D%3D&w=1000&q=80", :size => "70x85", alt: "default user photo" %>
        <% end %>
      </div>
      <div class="user-details">
        <h1><%= link_to user.name, user, class: "link-button" %></h1>
        <p>Number of posts: <%= user.posts_counter %></p>
      </div>
    </div>
  <% end %>
</div>
