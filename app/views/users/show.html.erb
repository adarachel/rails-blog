<div class="user_container">
  <%= render 'shared/user_profile', user: @user %>
</div>

<div class="recent_posts">
  <% @user.recent_posts.each do |post| %>
    <h4><%= link_to post.title, user_post_path(@user, post) %></h4>
    <p><%= post.text %></p>
    <p>
      <small>Comments: <%= post.comments_counter || 0 %>,</small> 
      <small>Likes: <%= post.likes_counter || 0 %></small>
    </p>
  <% end %>
  
  <button>
    <%= link_to 'See all Posts', user_posts_path(@user) %>
  </button>
</div>